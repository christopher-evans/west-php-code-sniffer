{
  "name": "west-php/coding-standard",
  "type": "library",
  "description": "object oriented coding standard",
  "keywords": [
    "phpcs",
    "oop",
    "coding-standard"
  ],
  "homepage": "https://github.com/christopher-evans/west-php-code-sniffer",
  "license": "MIT",
  "authors": [
    {
      "name": "Christopher Evans <cmevans@tutanota.com>"
    }
  ],
  "require": {
    "php": ">=7.0",
    "squizlabs/php_codesniffer": "^3.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5"
  },
  "scripts": {
    "add-standard" : "phpcs --config-set installed_paths ./West",
    "test": [
      "@add-standard",
      "phpunit"
    ],
    "cs-check": "phpcs --standard=West ./run",
    "cs-fix": "phpcbf --standard=West ./run"
  }
}
